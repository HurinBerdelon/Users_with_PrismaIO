                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/session/logout": {
            "delete": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Logout User",
                "description": "Delete Refresh Token from User, so he cannot refresh again, making the logout",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "x-refresh-token",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Success"
                    }
                }
            }
        },
