        "/session": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Authenticate User",
                "description": "Route used to generate an authentication token for User",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "login": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "username": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "accessToken": {
                                            "type": "string"
                                        },
                                        "refreshToken": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized/ Login or Password Invalid/ An message has been sent to ${user.email} to confirm your e-mail!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/session/refresh": {
