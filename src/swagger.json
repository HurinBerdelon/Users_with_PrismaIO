    "paths": {
        "/user": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Create a new User",
                "description": "Create a temporary new user and sends a e-mail to given e-mail to confirm user registration",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "User Name Sample",
                                    "CPF": "userName",
                                    "email": "user@userWithPrisma.com",
                                    "password": "password@123"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/JsonMessage"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request/ User Already Exists",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/delete-account": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Send Account Deletion e-mail",
                "description": "Send an e-mail to given e-mail (the one of user authenticated) to confirm account deletion.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "email": "user@userWithPrisma.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/JsonMessage"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": [
                    "User"
                ],
                "summary": "Delete a User",
                "description": "Delete current User account",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "x-delete-account-token",
                        "schema": {
                            "type": "string"
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    }
                }
            }
        },
