                        "description": "success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/JsonMessage"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid Token/ Token has expired/ Email Already Confirmed",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/Error"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found/ User not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#definitions/Error"
                                }
                            }
                        }
                    }
                }
            }
        },
